<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="600dp"
    android:layout_gravity="center"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="600dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">



        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/logo_transparentnew"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="25dp">


                <EditText
                    android:id="@+id/findUname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/texteditbgn12"
                    android:hint="Username"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/person_24"
                    android:paddingStart="8dp"
                    android:padding="15dp"
                    android:layout_marginTop="40dp"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:textColor="#0d6e6a"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/changeEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/texteditbgn12"
                    android:hint="Edit Email ID"
                    android:padding="15dp"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/mail"
                    android:paddingStart="8dp"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:textColor="#0d6e6a"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/changeContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/texteditbgn12"
                    android:hint="Edit Contact Number"
                    android:padding="15dp"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/mobile"
                    android:paddingStart="8dp"
                    android:inputType="phone"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:textColor="#0d6e6a"
                    android:textStyle="bold"/>


                <LinearLayout
                    android:id="@+id/checkboxview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:layout_marginTop="20dp">

                    <CheckBox
                        android:id="@+id/changeCheckBoxMaths"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Maths"/>

                    <CheckBox
                        android:id="@+id/changeCheckBoxScience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Science" />


                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radioview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <RadioButton
                        android:id="@+id/changeRadioBtnGrade10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grade 10" />

                    <RadioButton
                        android:id="@+id/changeRadioBtnGrade11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grade 11" />

                </RadioGroup>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/buttonSaveChange"
                    android:layout_width="115dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/btn"
                    android:inputType="text"
                    android:text="Save changes"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/buttonCancelChange"
                    android:layout_width="115dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="35dp"
                    android:background="@drawable/btn"
                    android:inputType="text"
                    android:text="Cancel"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal">
            <ProgressBar
                android:id="@+id/progressBarPop1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>