<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.Add_Attendance">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/darkgreen">

            <ImageView
                android:id="@+id/add_attendance_back"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Add Attendance"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold|normal" />


        </RelativeLayout>



        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_transparentnew" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/save_student_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/save1"
            app:maxImageSize="40dp">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>


        <LinearLayout
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/grade10_list"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:background="@drawable/btn"
                android:text="Grade 10"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:paddingHorizontal="30dp"/>

            <TextView
                android:id="@+id/grade11_list"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="Grade 11"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:background="@drawable/btn"
                android:paddingTop="10dp"
                android:paddingHorizontal="30dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="180dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp"
            android:paddingRight="55dp">


            <TextView
                android:id="@+id/attendance_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:paddingTop="10dp"
                android:paddingHorizontal="30dp"/>


        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stud_attendance_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:paddingTop="40dp"
            android:scrollbars="vertical">


        </androidx.recyclerview.widget.RecyclerView>
    </androidx.cardview.widget.CardView>


</RelativeLayout>