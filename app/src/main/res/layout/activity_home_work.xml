<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.Home_Work">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:background="@color/darkgreen"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/home_work_back"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Home Work"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold|normal" />



    </RelativeLayout>
        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_transparentnew" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center">

                <GridLayout
                    android:columnCount="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_height="100dp"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="6dp"
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="25dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:id="@+id/grade10_hw"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="@color/tableColor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <TextView
                                android:textColor="@color/black"
                                android:text="Grade 10"
                                android:textSize="25dp"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="100dp"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="6dp"
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="25dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:id="@+id/grade11_hw"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="@color/tableColor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <TextView
                                android:textColor="@color/black"
                                android:text="Grade 11"
                                android:textSize="25dp"
                                android:layout_gravity="center_vertical"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="100dp"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="6dp"
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="25dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:id="@+id/view_answers"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="@color/tableColor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <TextView
                                android:textColor="@color/black"
                                android:text="Answers"
                                android:textSize="25dp"
                                android:layout_gravity="center_vertical"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </GridLayout>

            </LinearLayout>


    </androidx.cardview.widget.CardView>

<TextView
    android:id="@+id/gradeValue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints"
    android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>