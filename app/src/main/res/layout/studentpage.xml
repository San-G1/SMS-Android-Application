            android:layout_height="120dp">

            <TextView
                android:id="@+id/hii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="45dp"
                android:layout_marginRight="30dp"
                android:text="Welcome back"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dashboardtxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-20dp"
                android:layout_marginTop="45dp"
                android:layout_toEndOf="@+id/hii"
                android:layout_toRightOf="@+id/hii"
                android:hint="Nickname"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileEditStd"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/profile" />

            <ImageView
                android:id="@+id/studentmenupopupbtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_weight="0"
                android:src="@drawable/more_vert" />

            <TextView
                android:id="@+id/current_date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dashboardtxt1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:layout_marginRight="30dp"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/current_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dashboardtxt1"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/current_date1"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <ScrollView
